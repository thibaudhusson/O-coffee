<%- include('./partials/header') %>

    <main>
        <div class = titre>
            
            <h1 class = titreimg >Notre catalogue</h1>
        </div>

        <div>
            

            <% for( coffee of coffees ) { %>
                
            <article>
                <h2><%= coffee.name %></h2>
                <ul>
                    <img src="/visuals/coffees/<%= coffee.name %>.png" alt="image café">
                    <li>Caractéristique principale : <%= coffee.caracteristique %></li>
                    <li>Disponible : <%= coffee.dispo %></li>
                    <button class = article2><a href="/detail/<%= coffee.id %>">Découvrir</a></button>
                    <button class = add > <a href="/favoris/add/<%= coffee.id %>"> ajout favoris</a></button>
                </ul>
            </article>

            <% } %>

        
        </div>
    </main>
    <%- include('./partials/footer') %>